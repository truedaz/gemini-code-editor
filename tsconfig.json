{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020", // Or a suitable ES version
    "outDir": "out",     // <<< IMPORTANT: This tells tsc where to put compiled .js files
    "rootDir": "src",    // <<< IMPORTANT: This tells tsc where your .ts source files are
    "sourceMap": true,
    "strict": true,
    "lib": ["es2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    /* Add other options as needed */
  },
  "include": [
    "src/**/*.ts" // Ensure it includes your extension.ts
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}